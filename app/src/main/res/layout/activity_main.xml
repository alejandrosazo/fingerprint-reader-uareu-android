<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fingerprintexample.MainActivity">

    <Button
        android:id="@+id/buttonScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan Init"
        tools:layout_editor_absoluteX="159dp"
        android:layout_centerHorizontal="true"
        android:onClick="startScan"
        tools:layout_editor_absoluteY="190dp" />

    <ImageView
        android:id="@+id/ivFingerDisplay"
        android:layout_width="384dp"
        android:layout_height="290dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:contentDescription="Scanned fingerprint"
        android:layout_below="@+id/buttonScan"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/ivFingerDisplay"
        android:layout_centerHorizontal="true"
        />
    <ScrollView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_below="@+id/ivFingerDisplay">
        <TextView
            android:id="@+id/base64View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/tvMessage"
            android:layout_centerHorizontal="true"
            />
    </ScrollView>

</RelativeLayout>